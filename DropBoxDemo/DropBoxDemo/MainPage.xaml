<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DropBoxDemo"
             x:Class="DropBoxDemo.MainPage">

    <StackLayout VerticalOptions="Center">
        <!-- Place new controls here -->
        <Button Text="Authentication" x:Name="ButtonAuthen" VerticalOptions="Center" Clicked="ButtonAuthen_OnClicked"/>
        <Button Text="Get Files" x:Name="ButtonGetFiles" Clicked="ButtonGetFiles_OnClicked"/>
        <Button Text="Upload Files" x:Name="ButtonUpload" Clicked="ButtonUpload_OnClicked"></Button>
        <Button Text="Download Files" x:Name="ButtonDownload" Clicked="ButtonDownload_OnClicked"/>
        <Image x:Name="FileImagePreview" VerticalOptions="Center" HorizontalOptions="Center"/>
    </StackLayout>

</ContentPage>
